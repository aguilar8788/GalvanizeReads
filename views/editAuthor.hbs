<form class="addBookForm" action="/editAuthor" method="post">
  <label for="first_name">First Name</label>
  <input type="text" name="first_name" value="{{editAuthor.first_name}}">
  <label for="last_name">Last Name</label>
  <input type="text" name="last_name" value="{{editAuthor.last_name}}">
  <label for="image">Image URL</label>
  <input type="text" name="image" value="{{editAuthor.image}}">
  <label for="bio">Bio</label>
  <textarea name="bio" rows="8" cols="40">{{editAuthor.bio}}</textarea>
  <button type="submit" name="id" value="{{editAuthor.id}}">Add Changes</button>
</form>

<form class="" action="/authorsBooks" method="post">
  <select class="selection" name="book_id">
    {{#each addBook}}
    <option value="{{this.id}}">{{this.title}}</option>
    {{/each}}
  </select>
  <button type="submit" name="id" value="{{editAuthor.id}}">Add Book</button>
</form>
