<div class="books_container">
  <ul class="book_info">
    <li><img src="{{deleteAuthor.authorImage}}" width="100" height="138" class="bookImage" /></li>
    <li class="liData"><h1>{{deleteAuthor.first_name}} {{deleteAuthor.last_name}}</h1></li>
    <li class="description" class="liData">{{deleteAuthor.bio}}</li>
  </ul>
  <form action="/deleteAuthor" method="post">
    <button type="submit" name="id" value="{{deleteAuthor.authorId}}">Delete {{deleteAuthor.first_name}} {{deleteAuthor.last_name}} ?</button>
  </form>
</div>
